// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String  @unique
  Token     Token?
  logo      String?
  publicKey String?
}

model Token {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  user  User   @relation(fields: [email], references: [email])
  token String @unique
}
